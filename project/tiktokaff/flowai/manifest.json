{
  "manifest_version": 3,
  "name": "Flow AI Unlocked",
  "version": "3.2",
  "description": "AI Content Generator + TikTok Uploader - All in One",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "sidePanel",
    "downloads",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "html/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tiktok.com/*"],
      "js": ["content/tiktok.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Flow AI Unlocked"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["aiunlocked.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
