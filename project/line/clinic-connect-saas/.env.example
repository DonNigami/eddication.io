# =====================================================
# CLINIC CONNECT SAAS - ENVIRONMENT VARIABLES
# =====================================================

# -----------------------------------------------------
# SUPABASE
# -----------------------------------------------------
# Server-side (Node.js/Edge Functions)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Client-side (Vite - LIFF Apps)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Client-side (Next.js - Web App)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------------------------
# LINE PLATFORM
# -----------------------------------------------------
# LINE LIFF IDs (Vite)
VITE_LINE_LIFF_ID_PATIENT=your-patient-liff-id
VITE_LINE_LIFF_ID_DOCTOR=your-doctor-liff-id

# LINE LIFF IDs (Next.js)
NEXT_PUBLIC_LINE_LIFF_ID_PATIENT=your-patient-liff-id
NEXT_PUBLIC_LINE_LIFF_ID_DOCTOR=your-doctor-liff-id

# LINE Channel (for Webhook & Messaging)
LINE_CHANNEL_ID=your-channel-id
LINE_CHANNEL_SECRET=your-channel-secret
LINE_ACCESS_TOKEN=your-access-token
LINE_CHANNEL_ACCESS_TOKEN=your-access-token

# LINE Channel (Vite client-side)
VITE_LINE_CHANNEL_ID=your-channel-id

# LINE Channel (Next.js client-side)
NEXT_PUBLIC_LINE_CHANNEL_ID=your-channel-id

# LINE Login (for Web Admin)
LINE_LOGIN_CHANNEL_ID=your-login-channel-id
LINE_LOGIN_CHANNEL_SECRET=your-login-channel-secret
LINE_LOGIN_REDIRECT_URI=https://your-project.supabase.co/functions/v1/line-login/callback

# Cron Secret (for Edge Functions)
CRON_SECRET=your-random-cron-secret

# -----------------------------------------------------
# APP
# -----------------------------------------------------
# Vite (LIFF)
VITE_API_BASE_URL=/api

# Next.js (Web)
NEXT_PUBLIC_API_BASE_URL=/api

NODE_ENV=development
